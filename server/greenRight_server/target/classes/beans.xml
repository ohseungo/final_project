<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	<context:property-placeholder location="classpath:db.properties"/>
	
	<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource"
	p:driverClassName="${db_driver}"
	p:url="${db_url}"
	p:username="${db_username}"
	p:password="${db_password}"/>
		
	
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean"
		p:configLocation="classpath:sqlMapConfig.xml"
		p:dataSource-ref="dataSource"/>
		
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionTemplate"
		c:sqlSessionFactory-ref="sqlSessionFactory"/>
	
	<bean id="userDao" class="com.scsa.model.dao.UserDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="userService" class="com.scsa.model.service.UserServiceImpl"
		p:userDao-ref="userDao"/>
		
	<bean id="greenPointDao" class="com.scsa.model.dao.GreenPointDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="greenPointService" class="com.scsa.model.service.GreenPointServiceImpl"
		p:greenPointDao-ref="greenPointDao"/>
		
	<bean id="storeDao" class="com.scsa.model.dao.StoreDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="storeService" class="com.scsa.model.service.StoreServiceImpl"
		p:storeDao-ref="storeDao"/>
		
	<bean id="recycleBoxDao" class="com.scsa.model.dao.RecycleBoxDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="recycleBoxService" class="com.scsa.model.service.RecycleBoxServiceImpl"
		p:recycleBoxDao-ref="recycleBoxDao"/>
		
	<bean id="walkDao" class="com.scsa.model.dao.WalkDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="walkSerivce" class="com.scsa.model.service.WalkServiceImpl"
		p:stepDao-ref="walkDao"/>

	
	<bean id="productDao" class="com.scsa.model.dao.ProductDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="productSerivce" class="com.scsa.model.service.ProductServiceImpl"
		p:productDao-ref="productDao"/>	
		
	<bean id="disposableDao" class="com.scsa.model.dao.DisposableDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="disposableSerivce" class="com.scsa.model.service.DisposableServiceImpl"
		p:disposableDao-ref="disposableDao"/>
	
	<bean id="companyDao" class="com.scsa.model.dao.CompanyDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="companyService" class="com.scsa.model.service.CompanyServiceImpl"
		p:companyDao-ref="companyDao"/>
	
	<bean id="purchaseDao" class="com.scsa.model.dao.PurchaseDAOImpl"
		p:sqlSession-ref="sqlSession"/>
	<bean id="purchaseService" class="com.scsa.model.service.PurchaseServiceImpl"
		p:purchaseDao-ref="purchaseDao"/>
	
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="100000000"/>
	</bean>

</beans>
