<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayFragment"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="#ffffff"
    android:weightSum="10">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:text="결제 정보" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/cardBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/orange"
            android:textColor="#ffffff"
            android:text="신용카드" />
        <Button
            android:id="@+id/accountBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/basic"
            android:text="무통장 입금" />
        <Button
            android:id="@+id/simplePayBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@color/basic"
            android:text="간편 결제" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/payContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_margin="5dp">

        <android.support.v4.view.ViewPager
      android:id="@+id/pager"
      android:requiresFadingEdge="horizontal"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

  </android.support.v4.view.ViewPager>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:background="@drawable/border"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="총 주문금액"
                android:paddingStart="10dp"
                android:gravity="center_vertical"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.7"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="상품금액"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/orderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/orderprice"
                    android:gravity="right"
                    android:paddingEnd="15dp"
                    android:paddingTop="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="배송비"
                    android:paddingStart="20dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/deliveryPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/deliveryPrice"
                    android:gravity="right"
                    android:paddingEnd="15dp"
                    android:paddingTop="15dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal"
            android:background="#313131"
            >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="최종 결제금액"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:paddingStart="20dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/finalPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/finalPrice"
                android:gravity="right"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/payBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:background="@drawable/border2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/payBtn" />


</LinearLayout>